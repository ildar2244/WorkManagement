<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <!-- Set Toolbar in MainActivity-->
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>
        <!-- -->
        <TextView
            android:layout_width="@dimen/main_elements_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_elements_margin_top"
            android:text="Текст приветствия"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|left"
            android:textColor="@color/colorTextPrimary"
            android:fontFamily="sans-serif"
            android:textSize="20dp"/>
    </LinearLayout>
    <!-- Set FragmentDrawer -->
    <fragment
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:layout_marginRight="56dp"
        android:id="@+id/fragment_navigation_drawer"
        app:layout="@layout/fragment_navigation_drawer"
        android:name="ru.javaapp.workmanagement.fragments.FragmentDrawer"
        tools:layout="@layout/fragment_navigation_drawer" />
</android.support.v4.widget.DrawerLayout>
