<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <!-- Set Toolbar in WorkerMainActivity-->
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>
        <!--MAIN design -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/main_iv_task"
                    android:layout_width="@dimen/main_iv_size"
                    android:layout_height="@dimen/main_iv_size"
                    android:background="@drawable/xml_main_rectangle"
                    android:src="@drawable/ic_assignment_returned_white_48dp"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:layout_below="@id/main_iv_task"
                    android:text="Задания"
                    android:fontFamily="sans-serif"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/main_iv_kaydzen"
                    android:layout_width="@dimen/main_iv_size"
                    android:layout_height="@dimen/main_iv_size"
                    android:background="@drawable/xml_main_rectangle"
                    android:src="@drawable/ic_add_circle_outline_white_48dp"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:layout_below="@id/main_iv_kaydzen"
                    android:text="КАЙДЗЕН"
                    android:fontFamily="sans-serif"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/main_iv_trm"
                    android:layout_width="@dimen/main_iv_size"
                    android:layout_height="@dimen/main_iv_size"
                    android:background="@drawable/xml_main_rectangle"
                    android:src="@drawable/ic_schedule_white_48dp"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:layout_below="@id/main_iv_trm"
                    android:text="ТРМ"
                    android:fontFamily="sans-serif"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/main_iv_kanban"
                    android:layout_width="@dimen/main_iv_size"
                    android:layout_height="@dimen/main_iv_size"
                    android:background="@drawable/xml_main_rectangle"
                    android:src="@drawable/ic_photo_camera_white_48dp"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:layout_below="@id/main_iv_kanban"
                    android:text="КАНБАН"
                    android:fontFamily="sans-serif"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/main_iv_5c"
                    android:layout_width="@dimen/main_iv_size"
                    android:layout_height="@dimen/main_iv_size"
                    android:background="@drawable/xml_main_rectangle"
                    android:src="@drawable/ic_subtitles_white_48dp"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:layout_below="@id/main_iv_5c"
                    android:text="5С"
                    android:fontFamily="sans-serif"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/main_iv_smed"
                    android:layout_width="@dimen/main_iv_size"
                    android:layout_height="@dimen/main_iv_size"
                    android:background="@drawable/xml_main_rectangle"
                    android:src="@drawable/ic_map_white_48dp"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:layout_below="@id/main_iv_smed"
                    android:text="SMED"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textSize="18dp"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- Set FragmentDrawer -->
    <fragment
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:layout_marginRight="56dp"
        android:id="@+id/fragment_navigation_drawer"
        app:layout="@layout/fragment_navigation_drawer"
        android:name="ru.javaapp.workmanagement.fragments.FragmentDrawer"
        tools:layout="@layout/fragment_navigation_drawer" />
</android.support.v4.widget.DrawerLayout>
