<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="ru.javaapp.workmanagement.activities.TrackingActivity"
    android:fitsSystemWindows="true"
    android:divider="?android:dividerHorizontal"
    android:dividerPadding="16dp"
    android:showDividers="middle">
    <!-- Set Toolbar in AddEventsActivity-->
    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/ll_spn_margin_right"
            android:layout_marginLeft="@dimen/ll_spn_margin_right"
            android:layout_marginRight="@dimen/ll_spn_margin_right"
            android:layout_marginBottom="@dimen/ll_spn_margin_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="Мой темп (шт.):"
                android:fontFamily="sans-serif" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="@dimen/ll_spn_margin_right"
                android:id="@+id/et_speedCount"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/ll_spn_margin_right"
            android:layout_marginRight="@dimen/ll_spn_margin_right"
            android:layout_marginBottom="@dimen/ll_spn_margin_bottom">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_minus"
                android:layout_weight="0.3"
                android:id="@+id/btn_minus"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="40dp"
                android:id="@+id/tv_currentAdd"
                android:layout_weight="1"
                android:background="@color/buttonInTasRun"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#ff080f"
                android:textStyle="bold" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_plus"
                android:layout_weight="0.3"
                android:id="@+id/btn_plus"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/main_elements_margin_top"
            android:layout_marginLeft="@dimen/ll_spn_margin_right"
            android:layout_marginRight="@dimen/ll_spn_margin_right"
            android:layout_marginBottom="@dimen/ll_spn_margin_bottom">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_access_time_black_24dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="Осталось:"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="@dimen/ll_spn_margin_right"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/tv_CountToGo"
                    android:fontFamily="sans-serif"
                    android:layout_marginLeft="@dimen/ll_spn_margin_right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="360 мин."
                    android:id="@+id/tv_TimeToGo"
                    android:fontFamily="sans-serif"
                    android:layout_marginLeft="@dimen/ll_spn_margin_right"
                    android:layout_marginTop="@dimen/ll_spn_margin_right"/>
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="ЗАВЕРШИТЬ"
                    android:id="@+id/btn_finish"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/colorPrimary"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/ll_spn_margin_bottom">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_black_24dp_1x"
                android:layout_marginLeft="@dimen/ll_spn_margin_right"
                android:layout_marginTop="@dimen/ll_spn_margin_top"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:id="@+id/tv_what"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/ll_spn_margin_right"
                android:layout_marginTop="@dimen/ll_spn_margin_top"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/ll_spn_margin_bottom">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_place_black_24dp"
                android:layout_marginLeft="@dimen/ll_spn_margin_right"
                android:layout_marginTop="@dimen/ll_spn_margin_top"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:id="@+id/tv_where"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/ll_spn_margin_right"
                android:layout_marginTop="@dimen/ll_spn_margin_top"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/ll_spn_margin_bottom">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_comment_24dp"
                android:layout_marginLeft="@dimen/ll_spn_margin_right"
                android:layout_marginTop="@dimen/ll_spn_margin_top"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:id="@+id/tv_comment"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="@dimen/ll_spn_margin_right"
                android:layout_marginTop="@dimen/ll_spn_margin_top"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/ll_spn_margin_right"
                android:layout_marginRight="@dimen/ll_spn_margin_right">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:id="@+id/btn_stop"
                    android:text="STOP"
                    android:background="@color/red"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:id="@+id/btn_brak"
                    android:background="@color/colorAccent"
                    android:layout_weight="1"
                    android:text="БРАК"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:id="@+id/btn_sos"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1"
                    android:text="SOS"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>

