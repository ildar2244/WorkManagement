<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <!-- Set Toolbar in MainActivity-->
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>
        <!-- -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/whom"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|left"
                android:textColor="@color/colorTextPrimary"
                android:fontFamily="sans-serif"
                android:textSize="20dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:id="@+id/whomSpinner"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/what"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|left"
                android:textColor="@color/colorTextPrimary"
                android:fontFamily="sans-serif"
                android:textSize="20dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:id="@+id/whatSpinner"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/where"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|left"
                android:textColor="@color/colorTextPrimary"
                android:fontFamily="sans-serif"
                android:textSize="20dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:id="@+id/whereSpinner"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/how_many"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|left"
                android:textColor="@color/colorTextPrimary"
                android:fontFamily="sans-serif"
                android:textSize="20dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:id="@+id/howManySpinner"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/from"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|left"
                android:textColor="@color/colorTextPrimary"
                android:fontFamily="sans-serif"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_input_dateBefore"
                    android:hint="@string/tv_hint_date"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextSecondary"
                    android:gravity="center"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_input_timeBefore"
                    android:hint="@string/tv_hint_time"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextSecondary"
                    android:gravity="center"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_finish"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|left"
                android:textColor="@color/colorTextPrimary"
                android:fontFamily="sans-serif"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_input_dateAfter"
                    android:hint="@string/tv_hint_date"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextSecondary"
                    android:gravity="center"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_input_timeAfter"
                    android:hint="@string/tv_hint_time"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextSecondary"
                    android:gravity="center"
                    android:layout_weight="1" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
