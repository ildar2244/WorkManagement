<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">
        <!-- Set Toolbar in MainActivity-->
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>
    </LinearLayout>
    <!-- UI layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:background="@color/white">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">
                <!-- select WORKER -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/cta_bloc_margin_bottom">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_people_black_24dp"
                        android:layout_weight="0.4"
                        android:layout_gravity="center_vertical" />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/cta_spn_padding_lr"
                        android:paddingRight="@dimen/cta_spn_padding_lr"
                        android:spinnerMode="dropdown"
                        android:id="@+id/whomSpinner"
                        android:layout_weight="0.1"
                        android:layout_gravity="center_vertical" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:src="@drawable/ic_next_blue_24"
                        android:layout_weight="0.4"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
                <!-- select WHAT -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/cta_bloc_margin_bottom">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star_black_24dp_1x"
                        android:layout_weight="0.4"
                        android:layout_gravity="center_vertical"/>
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/cta_spn_padding_lr"
                        android:paddingRight="@dimen/cta_spn_padding_lr"
                        android:spinnerMode="dropdown"
                        android:id="@+id/whatSpinner"
                        android:layout_weight="0.1"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:src="@drawable/ic_next_blue_24"
                        android:layout_weight="0.4"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <!-- select PLACE -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/cta_bloc_margin_bottom">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_place_black_24dp"
                        android:layout_weight="0.4"
                        android:layout_gravity="center_vertical"/>
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/cta_spn_padding_lr"
                        android:paddingRight="@dimen/cta_spn_padding_lr"
                        android:spinnerMode="dropdown"
                        android:id="@+id/whereSpinner"
                        android:layout_weight="0.1"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:src="@drawable/ic_next_blue_24"
                        android:layout_weight="0.4"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <!-- input COUNT_PLAN -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/cta_bloc_margin_bottom">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_assignment_black_24dp"
                        android:layout_weight="0.9"
                        android:layout_gravity="center" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/cta_spn_padding_lr"
                        android:inputType="number"
                        android:id="@+id/howManyEt"
                        android:layout_weight="0.1" />
                </LinearLayout>
                <!-- select START-FINISH TIME and DATE -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/cta_bloc_margin_bottom">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_access_time_black_24dp"
                        android:layout_weight="0.9"
                        android:layout_gravity="center" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1">
                        <!-- START -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/cta_spn_padding_lr"
                                android:text="@string/from"
                                android:gravity="center_vertical|left"
                                android:textColor="@color/colorTextPrimary"
                                android:fontFamily="sans-serif"
                                android:textSize="20dp"
                                android:layout_weight="0.4"
                                android:layout_gravity="center" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/cta_spn_padding_lr"
                                android:id="@+id/tv_input_dateBefore"
                                android:hint="@string/tv_hint_date"
                                android:fontFamily="sans-serif"
                                android:textSize="16sp"
                                android:textColor="@color/colorTextSecondary"
                                android:gravity="center"
                                android:layout_weight="0.3"
                                android:layout_gravity="center" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/cta_spn_padding_lr"
                                android:id="@+id/tv_input_timeBefore"
                                android:hint="@string/tv_hint_time"
                                android:fontFamily="sans-serif"
                                android:textSize="16sp"
                                android:textColor="@color/colorTextSecondary"
                                android:gravity="center"
                                android:layout_weight="0.3"
                                android:layout_gravity="center" />
                        </LinearLayout>
                        <!-- FINISH -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/cta_spn_padding_lr"
                                android:text="@string/tv_finish"
                                android:gravity="center_vertical|left"
                                android:textColor="@color/colorTextPrimary"
                                android:fontFamily="sans-serif"
                                android:textSize="20dp"
                                android:layout_gravity="center"
                                android:layout_weight="0.4" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/cta_spn_padding_lr"
                                android:id="@+id/tv_input_dateAfter"
                                android:hint="@string/tv_hint_date"
                                android:fontFamily="sans-serif"
                                android:textSize="16sp"
                                android:textColor="@color/colorTextSecondary"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_weight="0.3" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/cta_spn_padding_lr"
                                android:id="@+id/tv_input_timeAfter"
                                android:hint="@string/tv_hint_time"
                                android:fontFamily="sans-serif"
                                android:textSize="16sp"
                                android:textColor="@color/colorTextSecondary"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_weight="0.3" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!-- input COMMENT -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/cta_bloc_margin_bottom">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_comment_24dp"
                        android:layout_weight="0.9"
                        android:layout_gravity="center" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/cta_spn_padding_lr"
                        android:maxLength="300"
                        android:id="@+id/cta_comment"
                        android:layout_weight="0.1" />
                </LinearLayout>
                <!-- output-button data -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/btn_send"
                    android:id="@+id/btn_send"
                    android:background="@drawable/xml_main_rectangle"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
