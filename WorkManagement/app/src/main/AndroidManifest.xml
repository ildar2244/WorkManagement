<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.javaapp.workmanagement" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:configChanges="keyboardHidden|orientation"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.auth.LoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter
                android:label="@string/app_name" >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.worker.WorkerMainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.master.MasterMainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_master_main"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.master.CreateTaskActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_create_task"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.master.TrackingActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_tracking"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.master.ReportsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_reports"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.worker.TaskListActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_task_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.worker.TaskBeginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_task_begin"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".activities.worker.TaskRunActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_task_run"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.worker.TaskAboutActivity"
            android:label="@string/title_activity_task_about"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".activities.master.TaskAboutForMasterActivity"
            android:label="@string/about_tracking"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".activities.worker.SosActivity"
            android:label="@string/sos"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".activities.worker.StopActivity"
            android:label="@string/cause_stop"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".activities.worker.BrakActivity"
            android:label="@string/cause_brak"
            android:theme="@style/AppTheme" >
        </activity>
    </application>

</manifest>
